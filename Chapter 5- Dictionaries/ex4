rivers_dict = {
    'Nile': 'Egypt',
    'Amazon': 'Brazil',
    'Yangtze': 'China'
}

for river, country in rivers_dict.items():
    print(f"The {river} runs through {country}.")

print("\nList of rivers:")
for river in rivers_dict.keys():
    print(river)

print("\nList of countries:")
for country in rivers_dict.values():
    print(country)